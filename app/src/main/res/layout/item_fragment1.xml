<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/px_30"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/message_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/messagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【放暑假】"
            android:textColor="@color/chengSe"
            android:textSize="@dimen/px_50"
            android:layout_toLeftOf="@+id/messagetime"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/messagetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016-6-21"
            android:textColor="@color/blackWord"
            android:textSize="@dimen/px_41" />

        <TextView
            android:id="@+id/messagecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messagetitle"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/px_30"
            android:lines="2"
            android:text="消息内容"
            android:textColor="@color/messgeword"
            android:textSize="@dimen/px_41" />
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/messagecontent"
            android:layout_marginTop="@dimen/px_30"
            android:visibility="gone">

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/messageinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:layout_alignParentRight="true"
        android:layout_below="@id/message_main"
        android:layout_marginTop="@dimen/px_30"
        android:background="@color/gray2"
        android:gravity="right|center_vertical"
        android:text="查看详情>>"
        android:textColor="@color/blackWord"
        android:textSize="@dimen/px_41" />
</RelativeLayout>